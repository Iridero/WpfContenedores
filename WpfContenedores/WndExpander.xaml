<Window x:Class="WpfContenedores.WndExpander"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfContenedores"
        mc:Ignorable="d"
        Title="WndExpander" Height="450" Width="800">
    <StackPanel>
        <Expander>
            <Expander.Header>
                <TextBlock>El expander tiene dos partes<LineBreak/>
                <Italic>Header</Italic> y <Bold>Content</Bold></TextBlock>
            </Expander.Header>
            <Rectangle Width="200" Height="100" Fill="Orange" />
        </Expander>
        <Label>otro contenido</Label>
    </StackPanel>
</Window>
